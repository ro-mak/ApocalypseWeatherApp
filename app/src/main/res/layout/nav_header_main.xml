<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/nav_header_height"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:paddingTop="@dimen/nav_header_padding_vertical"
    android:paddingBottom="@dimen/nav_header_padding_vertical"
    android:paddingLeft="@dimen/nav_header_padding_horizontal"
    android:paddingRight="@dimen/nav_header_padding_horizontal">

    <ImageView
        android:id="@+id/nav_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/default_avatar"
        android:paddingTop="@dimen/nav_avatar_padding_vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colourTextOnBlack"
        android:text="@string/user_name"
        android:textSize="@dimen/nav_header_text_size" />

</LinearLayout>